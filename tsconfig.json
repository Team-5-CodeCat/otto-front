{
  "compilerOptions": {
    "target": "ES2022", // 더 최신 버전으로 업데이트
    "lib": ["dom", "dom.iterable", "esnext"],

    // JavaScript 지원
    "allowJs": true,
    "skipLibCheck": true,

    "strict": true,
    "noUncheckedIndexedAccess": true, // 배열/객체 접근 시 undefined 체크
    "noImplicitOverride": true, // override 키워드 강제
    "exactOptionalPropertyTypes": true, // 선택적 프로퍼티 엄격 체크
    "strictNullChecks": true,

    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "noEmit": true,
    "incremental": true,
    "removeComments": false,
    "sourceMap": true,

    "jsx": "preserve",

    "plugins": [
      {
        "name": "next"
      }
    ],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/utils/*": ["./utils/*"],
      "@/types/*": ["./types/*"],
      "@/styles/*": ["./styles/*"],
      "@/public/*": ["./public/*"]
    },

    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "declarationMap": false
    // "allowImportingTsExtensions": false
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.mts", "**/*.cts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "out", "dist", "build", "*.config.js", "*.config.mjs"],
  "ts-node": {
    "esm": true
  }
}
